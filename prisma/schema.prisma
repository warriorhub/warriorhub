generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id               Int     @id @default(autoincrement())
  email            String  @unique
  password         String
  role             Role    @default(USER)
  interestedEvents Event[] @relation("EventToUser")
  createdEvents    Event[] @relation("EventCreator")
}

model Event {
  id                 String     @id @default(uuid()) @db.Uuid
  name               String     @default("An event at UH Manoa")
  description        String?
  dateTime           DateTime
  location           String
  eventSize          EventSize?
  categories         Category[] @default([])
  imageUrl           String     @default("/default-event.jpg")
  // User who created this event (ORGANIZER or ADMIN)
  createdBy          User   @relation("EventCreator", fields: [createdById], references: [id])
  createdById        Int
  // Users who RSVP'd
  potentialAttendees User[]     @relation("EventToUser")
}

model Stuff {
  id        Int       @id @default(autoincrement())
  name      String
  quantity  Int
  condition Condition @default(good)
  owner     String
}

enum Role {
  USER
  ADMIN
  ORGANIZER
}

enum Category {
  Recreation
  Food
  Career
  Free
  Cultural
  Academic
  Social
  Sports
  Workshop
}

enum EventSize {
  small
  medium
  large
}

enum Condition {
  excellent
  good
  fair
  poor
}
